@model easycredit.Models.PagoInversion

@{
   ViewData["Title"] = "Editar";
    ViewData["Seccion"] = "Pago inversion";
    Layout = "_Layout";
}

<h1>Editar pago</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
               
                <input type="hidden" asp-for="CapitalInicial" class="form-control" />
              
            </div>
           
            <div class="form-group">
              
                <input type="hidden" asp-for="FechaEfectiva" class="form-control" />
         
            </div>
             <div class="form-group">
              
                <input type="hidden" asp-for="Active" class="form-control" />
         
            </div>
            <div class="form-group">
                <label asp-for="Cuota" class="control-label"></label>
                <input  asp-for="Cuota" class="form-control" />
                <span asp-validation-for="Cuota" class="text-danger"></span>
            </div>
           
            <div class="form-group">
             
                <input type="hidden" asp-for="Amortizacion" class="form-control" />
              
            </div>
             <div class="form-group">
                <label asp-for="CodigoComprobante" class="control-label">Cod. Comprobante</label>
                <input asp-for="CodigoComprobante" readonly class="form-control" />
                <span asp-validation-for="CodigoComprobante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modalidad" class="control-label"></label>
                <select asp-for="Modalidad" class="form-control">
                    <option value="">-- Seleccionar --</option>
                    @foreach (var item in ViewBag.Modalidad)
                    {
                        <option value="@item.Id">@item.Tipo</option>
                    }
                </select>
            </div>
           
            <div class="form-group">
                <label asp-for="CodigoInversion" class="control-label">Cod. Inversion</label>
                <select asp-for="CodigoInversion" class="form-control">
                    <option value="">-- Seleccionar --</option>
                    @foreach (var item in ViewBag.CodigoInversion)
                    {
                        <option value="@item.Id">@item.Codigo</option>
                        
                    }
                </select>
                </div>
           <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
           
    <a class="nav-item" asp-action="Index">Volver al listado</a>
</div>
        </form>
    </div>
</div>



