@model IEnumerable<easycredit.Models.Prestamo>

@{
    ViewData["Title"] = "Listado";
    ViewData["Seccion"] = "Prestamos";
    Layout = "_Layout";
}

<h1>Listado de prestamos</h1>

<p>
    <a class="btn btn-success" asp-action="Create"> <i class="fa-solid fa-plus"></i>Agregar</a>
</p>
<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>
               Cod. prestamo
            </th>
            <th>
              Monto
            </th>
            <th>
              Plazo
            </th>
            <th>
               Taza interes
            </th>
            <th>
              Fecha solicitud
            </th>

            <th>
                Fecha inicio
            </th>
            <th>
              Fecha termino
            </th>
            <th>
               Cliente
            <th>
              Garante
            </th>
            <th>
              Cod. garantia
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Monto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Plazo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TazaInteres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaSolicitud)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaTermino)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Garante.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Garantia.Codigo)
                </td>
                <td>
                    <div class="btn-group btn-sm" role="group" aria-label="Basic example">
                        <a class="btn btn-warning ml-1  btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
                        <a class="btn btn-info ml-1  btn-sm" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-info"></i> Detalle</a>
                        <a class="btn btn-danger ml-1 btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i> Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
