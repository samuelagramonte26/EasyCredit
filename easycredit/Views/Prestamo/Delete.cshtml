@model easycredit.Models.Prestamo

@{
    ViewData["Title"] = "Eliminar";
    ViewData["Seccion"] = "Prestamos";
    Layout = "_Layout";
}

<h1>Eliminar prestamo</h1>

<h3 class="text-warning">&#191; Esta seguro que desea eliminar este prestamo? <i class="text-danger">esta accion no se podra revertir!</i></h3>
<div>
    <hr />
    <h4 class="text-white bg-danger rounded">@ViewBag.error</h4>
    <dl class="row">
        <h4 class="text-white bg-danger rounded">Cuidado esta accion eliminara todas las cuotas registradas en este prestamo!</h4>

        <dt class="col-sm-2">
            Cod. prestamo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plazo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plazo)
        </dd>
        <dt class="col-sm-2">
            Taza interes mensual
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TazaInteres)
        </dd>
        <dt class="col-sm-2">
            Fecha solicitud
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaSolicitud)
        </dd>
        <dt class="col-sm-2">
            Fecha aprovacion
        </dt>
        <dd class="col-sm-10">
            @if (Model.FechaAprovacion == null)
            {
                <div>N/A</div>
            }
            else
            {
                @Html.DisplayFor(model => model.FechaAprovacion)

            }
        </dd>
        <dt class="col-sm-2">
            Fecha inicio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            Fecha termino
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaTermino)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Garante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Garante.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Garantia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Garantia.Codigo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <button type="submit" value="Delete" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i>Eliminar</button> |
        <a class="nav-item" asp-action="Index">Volver al listado</a>
    </form>
</div>
