@model easycredit.Models.TipoCliente

@{
  
    ViewData["Title"] = "Editar Tipo Cliente";
    ViewData["Seccion"] = "Cliente";
    Layout = "_Layout";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            
            <button type="submit" value="Create" class="btn btn-primary" ><i class="bi bi-check-lg"></i> Guardar</button>
                <a asp-action="Index">Volver al listado</a>
        </form>
    </div>
</div>
