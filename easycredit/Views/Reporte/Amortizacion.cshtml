@model IEnumerable<easycredit.Models.Amortizacion>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Seccion"] - Easycredit</title>
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/easycredit.styles.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <!-- Custom styles for this template-->
</head>
<body>

<h1 class="text-center">Tabla de amortizacion</h1>


<table class="table table-hover table-striped">
    <caption>Tabla de amortizacion</caption>
    <thead class="table-dark">
        <tr>
            <th>
                #.
            </th>
            <th>
                Capital inicial
            </th>
            <th>
                Cuota
            </th>
            <th>
                Interes
            </th>
            <th>
                Abono Capital
            </th>
            <th>
                Saldo Pendiente
            </th>

            <th>
                Fecha planificada
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
        <td>
                @Html.DisplayFor(model => item.Numero)
        </td>
         <td>
                @Html.DisplayFor(model => item.CapitalInicial)
        </td>
         <td>
                @Html.DisplayFor(model => item.Cuota,2)
        </td>
         <td>
                @Html.DisplayFor(model => item.Interes)
        </td>
         <td>
                @Html.DisplayFor(model => item.Abono)
        </td>
         <td>
                @Html.DisplayFor(model => item.SaldoPendiente)
        </td>
         <td>
                @Html.DisplayFor(model => item.FechaPlanificada)
        </td>
        </tr>
        }
    </tbody>
</table>

</body>
<script>

window.addEventListener('load',()=>{
    setTimeout(()=>{
        print();
    },1500)
})
</script>
</html>